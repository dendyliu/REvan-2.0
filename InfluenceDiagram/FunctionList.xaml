<Window x:Class="InfluenceDiagram.FunctionList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Function List" Height="300" Width="300"
        Icon="app-icon.ico">
    <DockPanel Margin="5">
        <StackPanel DockPanel.Dock="Top">
            <Label>Search a function:</Label>
            <TextBox Name="textSearch" KeyDown="textSearch_KeyDown"></TextBox>
            <Label>Select a function:</Label>
        </StackPanel>
        <TextBlock Name="textDescription" DockPanel.Dock="Bottom" MinHeight="80" TextWrapping="Wrap"></TextBlock>
        <ListBox Name="listBox" SelectionChanged="listBox_SelectionChanged" MouseDoubleClick="listBox_MouseDoubleClick"></ListBox>
    </DockPanel>
</Window>
