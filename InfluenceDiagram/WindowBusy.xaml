<Window x:Class="InfluenceDiagram.WindowBusy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="80" Width="220"
        Icon="app-icon.ico" 
        Loaded="Window_Loaded"
        WindowStyle="None"
        ResizeMode="NoResize"
        Margin="0">
    <Border BorderThickness="3" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
        <StackPanel>
            <Label HorizontalAlignment="Center">Please wait...</Label>
            <Grid Height="25">
                <ProgressBar IsIndeterminate="True" Margin="5"></ProgressBar>
            </Grid>
        </StackPanel>
    </Border>
</Window>
