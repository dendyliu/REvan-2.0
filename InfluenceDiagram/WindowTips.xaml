<Window x:Class="InfluenceDiagram.WindowTips"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tips" Height="200" Width="400"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <StackPanel Margin="10">
        <Border BorderThickness="1" BorderBrush="Gray">
            <TextBlock FontSize="12" xml:space="preserve" TextAlignment="Center" TextWrapping="Wrap" Margin="10 10 10 10">To start working, drag Variable component to the canvas. 
To open User Manual, press F1 or click the Logo on top right and click Help.</TextBlock>
        </Border>
        <CheckBox Name="checkBox" FontSize="10" Margin="0 20 0 0">Do not show this again</CheckBox>
        <Grid Margin="0 10 0 0">
            <Button HorizontalAlignment="Right" Width="80" Height="25" Click="Close_Click">Close</Button>
        </Grid>
    </StackPanel>
</Window>
